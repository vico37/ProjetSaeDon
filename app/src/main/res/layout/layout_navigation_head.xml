<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20sp">

    <ImageView
        android:id="@+id/logo_menu"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <View
        android:id="@+id/view_supporter"
        android:layout_width="1sp"
        android:layout_height="1sp"
        app:layout_constraintBottom_toBottomOf="@id/logo_menu"
        app:layout_constraintEnd_toEndOf="@id/logo_menu"
        app:layout_constraintStart_toStartOf="@id/logo_menu"
        app:layout_constraintTop_toTopOf="@id/logo_menu"/>

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/view_supporter"
        app:layout_constraintStart_toEndOf="@id/logo_menu"
        />

    <TextView
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10sp"
        android:text="@string/menu"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/logo_menu"
        app:layout_constraintTop_toBottomOf="@id/view_supporter"
        />


</androidx.constraintlayout.widget.ConstraintLayout>